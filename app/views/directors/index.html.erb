<h1>
  List of all directors
</h1>

<hr>

<div>
  <%= link_to "Add a new director", new_director_path %>
</div>

<hr>

<table>
  <tr>
    <th>
      ID
    </th>

    <th>
      Name
    </th>

    <th>
      Date of birth
    </th>

    <th>
      Bio
    </th>

    <th>
      Created at
    </th>

    <th>
      Updated at
    </th>

    <th>
    </th>
  </tr>

  <% @directors.each do |a_director| %>
  <tr>
    <td>
      <%= a_director.id %>
    </td>

    <td>
      <%= a_director.name %>
    </td>

    <td>
      <%= a_director.date_of_birth %>
    </td>

    <td>
      <%= a_director.bio %>
    </td>

    <td>
      <%= time_ago_in_words(a_director.created_at) %> ago
    </td>
    <td>
      <%= time_ago_in_words(a_director.updated_at) %> ago
    </td>

    <td>
      <%= link_to "Show details", director_path(a_director) %>
    </td>
  </tr>
  <% end %>
</table>
